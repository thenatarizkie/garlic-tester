{
  "name": "garlic-test-handler",
  "version": "1.0.0",
  "description": "Garlic Player API Client - Node.js version",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "electron:start": "electron .",
    "electron:build": "electron-builder"
  },
  "keywords": [
    "garlic",
    "player",
    "api",
    "client"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.garlicplayer.testhandler",
    "productName": "Garlic Player API Client",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "files": [
      "electron/**/*",
      "server.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json",
      ".env",
      ".env.example"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    }
  }
}
