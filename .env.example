# Server Configuration
PORT=3005

# Screenshot Auto Upload Configuration
SCREENSHOT_INTERVAL_MINUTES=5
AUTO_SCREENSHOT_ENABLED=true
UPLOAD_API_URL=http://localhost/adnova-be/public/api/v1/garlic/screenshots/upload

# Polling Configuration (Listen to adnova-be for new screenshots)
POLLING_INTERVAL_SECONDS=10
ADNOVA_API_URL=http://localhost/adnova-be/public/api/v1/garlic/screenshots

# Garlic Player Default Configuration (optional)
DEFAULT_GARLIC_IP=127.0.0.1
DEFAULT_GARLIC_USERNAME=admin
DEFAULT_GARLIC_PASSWORD=

# Player ID Configuration (optional)
# If set, this player_id will be used as fallback when Garlic Player hasn't sent its UUID yet
# Leave empty to use IP address as fallback
DEFAULT_PLAYER_ID=

# Auto-update DEFAULT_PLAYER_ID in .env file when Garlic Player sends UUID
# Set to 'true' to automatically update .env file (useful for backup/persistence)
# Set to 'false' to keep player_id only in memory (recommended for real-time operation)
AUTO_UPDATE_ENV_PLAYER_ID=false

# Command Polling Configuration (Listen to adnova-be for commands)
COMMAND_POLLING_ENABLED=true
COMMAND_POLLING_INTERVAL_SECONDS=5
ADNOVA_API_BASE_URL=http://127.0.0.1:8000/api/v1
